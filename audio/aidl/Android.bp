    name: "latest_android_hardware_audio_common_cpp_static",
    static_libs: [
        latest_android_hardware_audio_common + "-cpp",
    ],
}

cc_defaults {
    name: "latest_android_hardware_audio_common_ndk_static",
    static_libs: [
        latest_android_hardware_audio_common + "-ndk",
    ],
}

